{
  "manifest_version": 3,
  "name": "UN SDG Başlık Alıcı",
  "version": "1.0",
  "description": "SDG hedeflerinin başlığını alır.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Başlık Göster"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com.tr/dp/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
